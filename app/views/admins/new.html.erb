<h1>Create New admin</h1>
<%= form_for @admin,html: {class:"navbar-form pull-left"} do |f| %>
   <%= render "shared/error_messages",:target => @admin %>
    <%= f.label :AdminName %>
    <%= f.text_field(:AdminName) %>

    <%= f.label :AdminEmail %>
    <%= f.text_field(:AdminEmail) %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation,"Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <br>
    <%= f.submit "Create New Admin",:class => 'btn btn-primary' %>
  <% end %>